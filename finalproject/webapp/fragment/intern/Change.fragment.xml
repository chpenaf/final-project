<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <VBox class="sapUiSmallMargin">
        <form:SimpleForm    id="formChangeInternData"
                            editable="true"
                            layout="ResponsiveGridLayout" >

            <form:content>
                <core:Title text="Fragment"/>

                <Label text="{i18n>FirstName}" />
                <Input value="{FirstName}" required="true" />

                <Label text="{i18n>LastName}" />
                <Input value="{LastName}" required="true" />

                <Label text="{i18n>DocumentNumber}" />
                <Input value="{DocumentNumber}" required="true" />

                <Label text="{i18n>GrossAnnualSalary}" />
                <Slider enableTickmarks="true"
                        class="sapUiLargeMarginBottom"
                        value="{Salary}" 
                        min="12000" 
                        max="80000" >
                    <ResponsiveScale tickmarksBetweenLabels="5000" />
                </Slider>

                <Label text="{i18n>HiringDate}" />
                <DatePicker value="{
                    path: '/date',
                    type: 'DateType'
                }" /> 

            </form:content>

        </form:SimpleForm>
    </VBox>

</core:FragmentDefinition>