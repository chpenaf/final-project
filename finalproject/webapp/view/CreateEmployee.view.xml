<mvc:View   controllerName="com.logaligroup.finalproject.controller.CreateEmployee"
            xmlns:mvc="sap.ui.core.mvc"
            xmlns:f="sap.f"
            xmlns="sap.m" >
    
    <NavContainer>
        <pages>
            <f:DynamicPage>
                <f:title>
                    <f:DynamicPageTitle>
                        <f:heading>
                            <Title text="{i18n>TitleCreateEmployee}" />
                        </f:heading>
                    </f:DynamicPageTitle>
                </f:title>

                <f:content>
                    <Wizard id="CreateEmployeeWizard"
                            enableBranching="true" >
                    
                        <!-- Wizard Step 1 : Select Employee Type -->
                        <WizardStep id="EmployeeTypeSelectionStep"
                                    title="{i18n>Step1}"
                                    subsequentSteps="InternDataStep, SelfEmployedDataStep, ManagerDataStep"
                                    complete="goToEmployeeDataStep" >

                            <HBox   alignItems="Center" 
                                    justifyContent="Center"
                                    width="100%" >
                                
                                <SegmentedButton id="selectEmployeeType" selectionChange="setEmployeeType">
                                    <items>
                                        <SegmentedButtonItem class="sapUiSmallMarginEnd btnStep1" key="Intern" text="{i18n>BtnIntern}" />
                                        <SegmentedButtonItem class="sapUiSmallMarginEnd btnStep1" key="SelfEmployed" text="{i18n>BtnSelfEmployed}" />
                                        <SegmentedButtonItem class="sapUiSmallMarginEnd btnStep1" key="Manager" text="{i18n>BtnManager}" /> 
                                    </items>
                                </SegmentedButton>

                            </HBox>

                        </WizardStep>
                    
                    
                        <!-- Wizard Step 2 : Employee Data -->
                        <WizardStep id="InternDataStep"
                                    title="{i18n>Step2}"
                                    activate="activateStep2"
                                    nextStep="EmployeeAdditionalDataStep" >

                        </WizardStep>

                        <WizardStep id="SelfEmployedDataStep"
                                    title="{i18n>Step2}"
                                    activate="activateStep2"
                                    nextStep="EmployeeAdditionalDataStep" >

                        </WizardStep>

                        <WizardStep id="ManagerDataStep"
                                    title="{i18n>Step2}"
                                    activate="activateStep2"
                                    nextStep="EmployeeAdditionalDataStep" >

                        </WizardStep>

                        <!-- Wizard Step 3 : Additional Data -->
                        <WizardStep id="EmployeeAdditionalDataStep"
                                    title="{i18n>Step3}">

                        </WizardStep>

                    </Wizard>
                </f:content>

            </f:DynamicPage>
        </pages>
    </NavContainer>

</mvc:View>